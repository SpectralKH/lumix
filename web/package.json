        "start-production": "node server.js",
        "production": "npm-run-all build-production start-production"
    },
    "dependencies": {
        "webpack": "3.11.x",
        "node-sass": "4.7.x",
        "extract-text-webpack-plugin": "3.0.x",
        "css-loader": "0.28.x",
        "sass-loader": "6.0.x",
        "babel-loader": "7.1.x",
        "babel-register": "6.26.x",
        "babel-preset-env": "1.6.x",

        "express": "4.16.x",
        "redirect-https": "1.1.x",
        "pug": "~2.0.0-rc.4",
        "body-parser": "1.18.x",

        "passport": "0.4.x",
        "passport-google-oauth": "1.0.x",
        "express-session": "1.15.x",
        "connect-mongo": "2.0.x",

        "mongoose": "5.0.x"
    }
}

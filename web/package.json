{
    "name": "lumix",
    "version": "1.0.0",
    "description": "lumix website",
    "author": "KH kasperkh.kh@gmail.com",
    "main": "server.js",

    "scripts": {
        "build-dev": "webpack --config webpack.config.js --watch",
        "start-dev": "nodemon server.js",
        "dev": "npm-run-all --parallel build-dev start-dev",

